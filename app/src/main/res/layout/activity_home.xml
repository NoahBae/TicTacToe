<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#4CAF66"
                                                   android:id="@+id/overall" android:fadingEdge="vertical"
                                                   android:animationCache="false">

    <Button
            android:text="1 Player Mode"
            android:layout_width="217dp"
            android:layout_height="103dp" android:id="@+id/button_start2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="184dp"
            android:textColor="#263238" android:textSize="20sp" android:backgroundTint="#B9F6CA "
            android:onClick="nextStartClick"/>
    <Button
            android:text="2 Player Mode"
            android:layout_width="217dp"
            android:layout_height="103dp" android:id="@+id/button_start"
            android:onClick="startButtonClick" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="52dp"
            android:textColor="#263238" android:textSize="20sp" android:backgroundTint="#B9F6CA "/>
    <TextView
            android:text="Tic Tac Toe"
            android:layout_width="253dp"
            android:layout_height="77dp" android:id="@+id/intro_text"
            android:textSize="48sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.481"/>
    <ImageView
            android:layout_width="250dp"
            android:layout_height="231dp" app:srcCompat="@drawable/ithink" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.496"/>
</androidx.constraintlayout.widget.ConstraintLayout>